{
	"appId": "com.pelco1.app",
	"appName": "PELCO1 Reminder",
	"webDir": "build",
	"bundledWebRuntime": false,
	"server": {
		"cleartext": true
	},
	"plugins": {
		"LocalNotifications": {
			"smallIcon": "ic_stat_icon",
			"iconColor": "#FF0000"
		},
		"SplashScreen": {
			"launchShowDuration": 3000,
			"launchAutoHide": true,
			"backgroundColor": "#FFFFFFFF",
			"androidScaleType": "CENTER_CROP",
			"showSpinner": false,
			"splashFullScreen": true,
			"splashImmersive": true
		}
	}
}
